docker run -d \
 --name jellyfin \
 --user uid:gid \
 --net=host \
 --volume /home/bat/containers/jellyfin/config:/config \ 
 --volume /home/bat/containers/jellyfin/cache:/cache \ 
 --mount type=bind,source=/home/bat/containers/jellyfin/media,target=/media \
 --restart=unless-stopped \
 jellyfin/jellyfin



